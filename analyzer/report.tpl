        // ÊûÑÂª∫ÁõÆÂΩïÊ†ëÁªìÊûÑ
        function buildDirectoryTree() {
            const root = { name: "Ê†πÁõÆÂΩï", isDirectory: true, children: {} };
            
            // Â§ÑÁêÜÊØè‰∏™Êñá‰ª∂Ë∑ØÂæÑ
            Object.keys(fileData).forEach(path => {
                // Áªü‰∏ÄË∑ØÂæÑÂàÜÈöîÁ¨¶ÔºåÂ§ÑÁêÜ Windows Âíå UNIX Ë∑ØÂæÑ
                const normalizedPath = path.replace(/\\/g, '/');
                const parts = normalizedPath.split('/').filter(p => p.length > 0);
                
                let current = root;
                
                // ÈÄêÁ∫ßÂàõÂª∫ÁõÆÂΩïÁªìÊûÑ
                for (let i = 0; i < parts.length; i++) {
                    const part = parts[i];
                    
                    // Â¶ÇÊûúÊòØÊúÄÂêé‰∏ÄÈÉ®ÂàÜÔºåÂàô‰∏∫Êñá‰ª∂
                    if (i === parts.length - 1) {
                        if (!current.children[part]) {
                            current.children[part] = { 
                                name: part, 
                                isDirectory: false, 
                                path: path 
                            };
                        }
                    } else {
                        // Âê¶ÂàôÊòØÁõÆÂΩï
                        if (!current.children[part]) {
                            current.children[part] = { 
                                name: part, 
                                isDirectory: true, 
                                children: {} 
                            };
                        }
                        current = current.children[part];
                    }
                }
            });
            
            return root;
        }
        
        // Â∞ÜÁõÆÂΩïÊ†ëÊ∏≤Êüì‰∏∫HTML
        function renderDirectoryTree(node) {
            if (!node.isDirectory) return "";
            
            let html = '<ul>';
            
            // Ëé∑ÂèñÁõÆÂΩïÂíåÊñá‰ª∂Âπ∂ÊéíÂ∫è
            const items = Object.values(node.children);
            const directories = items.filter(item => item.isDirectory);
            const files = items.filter(item => !item.isDirectory);
            
            // ÊåâÂêçÁß∞ÊéíÂ∫è
            directories.sort((a, b) => a.name.localeCompare(b.name));
            files.sort((a, b) => a.name.localeCompare(b.name));
            
            // ÂÖàÊ∏≤ÊüìÁõÆÂΩï
            directories.forEach(dir => {
                // Ê∑ªÂä† title Â±ûÊÄß‰ª•ÊòæÁ§∫ÂÆåÊï¥ÂêçÁß∞
                html += '<li class="directory-item collapsed">' +
                        '<span class="directory" title="' + dir.name + '">' + dir.name + '</span>' +
                        renderDirectoryTree(dir) +
                        '</li>';
            });
            
            // ÂÜçÊ∏≤ÊüìÊñá‰ª∂
            files.forEach(file => {
                // ÂêåÊ†∑Ê∑ªÂä† title Â±ûÊÄß
                html += '<li><span class="file" data-path="' + file.path + '" title="' + file.name + '">' + 
                        file.name + '</span></li>';
            });
            
            html += '</ul>';
            return html;
        }
        
